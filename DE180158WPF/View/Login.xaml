<Window x:Class="DE180158WPF.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="368" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#dfe4e6">

    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Background="White" Padding="20" Margin="20,20,20,10">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Đăng nhập hệ thống" FontSize="22" FontWeight="Bold"
                       Foreground="#2D89EF" TextAlignment="Center" Margin="0 0 0 25"/>

            <!-- Email -->
            <StackPanel Margin="0 0 0 15">
                <TextBlock Text="Email" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 5"/>
                <Border CornerRadius="4" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1">
                    <TextBox x:Name="txtEmail" Height="35" FontSize="14" Padding="8"
                             Background="Transparent" BorderThickness="0"/>
                </Border>
            </StackPanel>

            <!-- Password -->
            <StackPanel Margin="0 0 0 15">
                <TextBlock Text="Mật khẩu" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 5"/>
                <Border CornerRadius="4" Background="#F5F5F5" BorderBrush="#CCCCCC" BorderThickness="1">
                    <PasswordBox x:Name="txtPassword" Height="35" FontSize="14" Padding="8"
                                 Background="Transparent" BorderThickness="0"/>
                </Border>
            </StackPanel>

            <!-- Login Button -->
            <Border CornerRadius="4" Background="#2D89EF" Margin="0 15 0 0">
                <Button Content="Đăng nhập"
                        Width="318" Height="40"
                        Click="Login_Click"
                        HorizontalAlignment="Center"
                        Background="Transparent" Foreground="White"
                        FontWeight="Bold" FontSize="15"
                        BorderThickness="0" Cursor="Hand"/>
            </Border>
        </StackPanel>
    </Border>
</Window>
